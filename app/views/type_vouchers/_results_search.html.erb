<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Tipo de Documento</th>
      <th>Etiqueta</th>
      <th>Siglas</th>
      <th>XML Schema</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @type_vouchers.each do |type_voucher| %>
      <tr>
        <td><%= type_voucher.name %></td>
        <td><%= type_voucher.label %></td>
        <td><%= type_voucher.acronym %></td>
        <td><%= type_voucher.xmlSchema %></td>
        <td>
          <%= button_to edit_type_voucher_path(type_voucher), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to type_voucher, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>