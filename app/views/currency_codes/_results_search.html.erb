<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Nombre del País</th>
      <th>Nombre de la moneda</th>
      <th>Código de la moneda</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @currency_codes.each do |currency_code| %>
      <tr>
        <td><%= currency_code.country %></td>
        <td><%= currency_code.name %></td>
        <td><%= currency_code.code %></td>
        <td>
          <%= button_to edit_currency_code_path(currency_code), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to currency_code, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>