<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Cédula</th>
      <th>Empresa</th>
      <th>Razón Social</th>
      <th>Sector</th>
      <th>Provincia</th>
      <th>Cantón</th>
      <th>Distrito</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.legalcertificate %></td>
        <td><%= customer.name %></td>
        <td><%= customer.businessname %></td>
        <td><%= customer.customer_type ? customer.customer_type.name : '' %></td>
        <td><%= customer.city ? customer.city.name : '' %></td>
        <td><%= customer.state ? customer.state.name : '' %></td>
        <td><%= customer.district ? customer.district.name : '' %></td>
        <td>
          <%= button_to edit_customer_path(customer), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to customer, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>