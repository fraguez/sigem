<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(district) do |f| %>
        <% if district.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(district.errors.count, "error") %> prohibited this district from being saved:</h2>

            <ul>
            <% district.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :city_id, "Provincia" %>
          </div>
          <div class="col-xs-10">
            <%= f.collection_select :city_id, @cities, :id, :name, 
                  {selected: @district.city_id, include_blank: 'Seleccione Provincia'},
                  {class: "form-control"} %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :state_id, "Cantón" %>
          </div>
          <div class="col-xs-10">
            <%= f.collection_select :state_id, @states, :id, :name, 
                  {selected: @district.state_id, include_blank: 'Seleccione Cantón'},
                  {class: "form-control"} %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :name, "Distrito" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name, autofocus: true, placeholder: "Nombre", class: "form-control" %>
          </div>
        </div>

        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
