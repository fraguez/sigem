<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th></th>
      <th>Cédula</th>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Cliente</th>
      <th>Fecha de Nacimiento</th>
      <th>Género</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @providermanagers.each do |providermanager| %>
      <tr>
        <td>
          <%= button_to providermanager_path(providermanager), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
        <td><%= providermanager.identificationcard %></td>
        <td><%= providermanager.name %></td>
        <td><%= providermanager.lastname %></td>
        <td><%= providermanager.provider ? providermanager.provider.name : '' %></td>
        <td><%= providermanager.birthday.strftime("%d/%m/%Y") %></td>
        <td><%= providermanager.sex ? providermanager.sex.description : '' %></td>
        <td>
          <%= button_to edit_providermanager_path(providermanager), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to providermanager, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>