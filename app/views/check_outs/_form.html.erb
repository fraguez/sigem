<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(check_out) do |f| %>
        <% if check_out.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(check_out.errors.count, "error") %> prohibited this check_out from being saved:</h2>

            <ul>
            <% check_out.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :employee_id, "Empleado" %>
          </div>
          <div class="col-xs-10">
            <%= f.collection_select :employee_id, @employees, :id, :identificationcard, 
                  {selected: @check_out.employee_id, include_blank: 'Seleccione el Empleado'},
                  {class: "form-control"} %>
          </div>
        </div>

        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
