<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(employee) do |f| %>
        <% if employee.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

            <ul>
            <% employee.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :identificationcard, "Cédula de Identidad" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :identificationcard, placeholder: "Cédula de Identidad", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :name, "Nombre del Encargado" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name, placeholder: "Nombre del Encargado", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :lastname, "Apellidos del Encargado" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :lastname, placeholder: "Apellidos del Encargado", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :birthday, "Fecha de Nacimiento" %>
          </div>
          <div class="col-xs-10">
            <%= f.date_field :birthday, placeholder: "Fecha de Nacimiento", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :sex_id, "Género" %>
          </div>
          <div class="col-xs-10">
            <%= f.collection_select :sex_id, @sexes, :id, :description, 
                  {selected: @employee.sex_id, include_blank: 'Seleccione el Género'},
                  {class: "form-control"} %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :admissiondate, "Fecha de Ingreso" %>
          </div>
          <div class="col-xs-10">
            <%= f.date_field :admissiondate, placeholder: "Fecha de Ingreso", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :departuredate, "Fecha de Retiro" %>
          </div>
          <div class="col-xs-10">
            <%= f.date_field :departuredate, placeholder: "Fecha de Retiro", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :salary, "Salario" %>
          </div>
          <div class="col-xs-10">
            <div class="input-group">
              <div class="input-group-addon">¢</div>
              <%= f.text_field :salary, placeholder: "Salario", class: "form-control" %>
            </div>
          </div>
        </div>

        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
