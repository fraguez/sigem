<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Cédula</th>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Fecha de Nacimiento</th>
      <th>Género</th>
      <th>Ingreso</th>
      <th>Retiro</th>
      <th>Salario</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.identificationcard %></td>
        <td><%= employee.name %></td>
        <td><%= employee.lastname %></td>
        <td><%= employee.birthday.strftime("%d/%m/%Y") %></td>
        <td><%= employee.sex ? employee.sex.description : '' %></td>
        <td><%= employee.admissiondate.strftime("%d/%m/%Y") %></td>
        <td><%= employee.departuredate.strftime("%d/%m/%Y") %></td>
        <td><%= number_to_currency(employee.salary, unit: "¢" ) %></td>
        <td>
          <%= button_to edit_employee_path(employee), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to employee, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>