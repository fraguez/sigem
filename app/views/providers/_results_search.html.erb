<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Cédula</th>
      <th>Empresa</th>
      <th>Razón Social</th>
      <th>Sector</th>
      <th>Provincia</th>
      <th>Cantón</th>
      <th>Distrito</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.legalcertificate %></td>
        <td><%= provider.name %></td>
        <td><%= provider.businessname %></td>
        <td><%= provider.provider_type ? provider.provider_type.description : '' %></td>
        <td><%= provider.city ? provider.city.name : '' %></td>
        <td><%= provider.state ? provider.state.name : '' %></td>
        <td><%= provider.district ? provider.district.name : '' %></td>
        <td>
          <%= button_to edit_provider_path(provider), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to provider, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>