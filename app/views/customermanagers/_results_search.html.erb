<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th></th>
      <th>Cédula</th>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Cliente</th>
      <th>Fecha de Nacimiento</th>
      <th>Género</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customermanagers.each do |customermanager| %>
      <tr>
        <td>
          <%= button_to customermanager_path(customermanager), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"> </span> Ver
          <% end %>
        </td>
        <td><%= customermanager.identificationcard %></td>
        <td><%= customermanager.name %></td>
        <td><%= customermanager.lastname %></td>
        <td><%= customermanager.customer ? customermanager.customer.name : '' %></td>
        <td><%= customermanager.birthday.strftime("%d/%m/%Y") %></td>
        <td><%= customermanager.sex ? customermanager.sex.description : '' %></td>
        <td>
          <%= button_to edit_customermanager_path(customermanager), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
          <% end %>
        </td>
        <td>
          <%= button_to customermanager, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>