<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(vacation) do |f| %>
        <% if vacation.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(vacation.errors.count, "error") %> prohibited this vacation from being saved:</h2>

            <ul>
            <% vacation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :employee_id, "Empleado" %>
          </div>
          <div class="col-xs-10">
            <%= f.collection_select :employee_id, @employees, :id, :identificationcard, 
                  {selected: @vacation.employee_id, include_blank: 'Seleccione el Empleado'},
                  {class: "form-control"} %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :startdate, "Fecha Inicio" %>
          </div>
          <div class="col-xs-10">
            <%= f.date_field :startdate, placeholder: "Fecha Inicio", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :enddate, "Fecha Final" %>
          </div>
          <div class="col-xs-10">
            <%= f.date_field :enddate, placeholder: "Fecha Final", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :detail, "Detalle" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_area :detail, placeholder: "Detalle", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :state, "Estado" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :state, class: "form-control", value: "Aprobada" %>
          </div>
        </div>

        <%= f.submit "Aceptar", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
