<table class="table">
  <thead>
    <tr>
      <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
    </tr>
    <tr>
      <th>Empleado</th>
      <th>Inicio</th>
      <th>Final</th>
      <th>Detalle</th>
      <th>Estado</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacations.each do |vacation| %>
      <tr>
        <td><%= vacation.employee ? vacation.employee.name + ' ' + vacation.employee.lastname : '' %></td>
        <td><%= vacation.startdate.strftime("%d/%m/%Y") %></td>
        <td><%= vacation.enddate.strftime("%d/%m/%Y") %></td>
        <td><%= vacation.detail %></td>
        <td><%= vacation.state %></td>
        <td>
          <%= button_to edit_vacation_path(vacation), {method: :get, class: "btn btn-info"} do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Aprobar
          <% end %>
        </td>
        <td>
          <%= button_to vacation, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>