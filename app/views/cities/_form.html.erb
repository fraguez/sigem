<div class="container-fluid">
  <div class="row">
    <div class="panel-body">
      <%= form_for(city) do |f| %>
        <% if city.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

            <ul>
            <% city.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group row">
          <div class="col-xs-2">
            <%= f.label :city_id, "Provincia" %>
          </div>
          <div class="col-xs-10">
            <%= f.text_field :name, autofocus: true, placeholder: "Nombre", class: "form-control" %>
